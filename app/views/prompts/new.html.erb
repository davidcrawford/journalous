<h1>New prompt</h1>

<% form_for(@prompt) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :text %><br />
    <%= f.text_field :text %>
  </p>
  <p>
    <%= f.label :quote %><br />
    <%= f.text_area :quote %>
  </p>
  <p>
    <%= f.label :quote_author %><br />
    <%= f.text_field :quote_author %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', prompts_path %>
