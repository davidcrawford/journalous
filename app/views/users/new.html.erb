<% content_for :scripts do %>
  <%= javascript_include_tag 'jquery.validate.min' %>
  <%= javascript_include_tag 'jquery.defaultText' %>
  
  <script type="text/javascript">
$(function() {
  $("#request").validate({ errorLabelContainer: "#errors" });
  $.defaultText({
    context: 'form'
  });
});
var $InviteRequest = (function() {
  var submit = function($form) {
    if(!$form.valid()) return false;
    
    $form.ajaxSubmit({
      success: function() {
        $form.hide();
        $("#submitted").show();
      }
    });
    return false;
  };
  
  return {
    submit: submit
  };
})();
      
  </script>
<% end %>
